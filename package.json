{
  "name": "your-monorepo",
  "private": true,
  "devDependencies": {
    "lerna": "^4.0.0",
    "concurrently": "^7.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:all": "concurrently \"lerna run start --scope back-end\" \"lerna run start --scope front-end\"",
    "start:back-end": "lerna run start --scope back-end",
    "start:front-end": "lerna run start --scope front-end"
  }
}
